<%- include("Partials/header.ejs") %>
    <div class="container my-4">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default panel-primary">
                    <div class="panel-body back">
                        <center>
                            <h1 class="life">Welcome to Toybank!</h1>
                            <h5>A world where all children are empowered through healthy play.</h5>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-4">
        <div class="row">
            <% for(var i=0; i < activity.length; i++) { %>
                <div class="col-lg-4">
                    <form action="/apply/<%= activity[i].id %>" method="post">
                        <div class="card">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSxKYw-GbA3mkPZLUnOzNUmHR4eDY4bP2QKLsxyTLtM0WepbAXS8PZCJZfEDbbp7sMxf4k&usqp=CAU"
                                class="card-img-top" alt="...">

                            <div class="card-body text-center">
                                <h1 class="card-title"><%= activity[i].name %></h1>
                                <p class="card-text">Date :<%= activity[i].date %></p>
                                <p>Venue :<%= activity[i].venue %></p>
                                <p>time :<%= activity[i].time %></p>
                    
                                <button type="submit" style="background-color: lightgreen; border: none; color: black;font-weight:500;"class="btn btn-primary">Apply</button>
                            </div>
                        </div>
                    </form>
                </div>
            <% } %>
        </div>
    </div>

    <%- include("Partials/footer.ejs") %>
