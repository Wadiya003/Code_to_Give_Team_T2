
<%- include("Partials/header.ejs") %>
    <div class="container my-4">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default panel-primary">
                    <div class="panel-body back">
                        <center>
                            <h1 class="life">Welcome to Toybank!</h1>
                            <h5>A world where all children are empowered through healthy play.</h5>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-4">
        <div class="row">
            <% for(var i=0; i < activity_type.length; i++) { %>
            <div class="col-lg-4">
                <form action="/activity/<%= activity_type[i].id %>">
                    <div class="card">
                        <img src="images\toydistri.jpg" class="card-img-top" alt="...">
                        <div class="card-body text-center">
                            <h1 class="card-title"><%= activity_type[i].name %></h1>
                            <p class="card-text"><%= activity_type[i].desc %></p>
                            <p>Preferred Skills : <%= activity_type[i].Skill1 %>, <%= activity_type[i].Skill2 %> , <%= activity_type[i].Skill3 %> , <%= activity_type[i].Skill4 %></p>
                            
                            <!-- <button text="submit" name="activity_add" class="btn btn-primary">View activities</button> -->
                            <button type="submit" class="btn btn-primary">View Activities</button>
                        </div>
                    </div>
                </form>
            </div>


            <% } %>
        </div>
    </div>
   

    <%- include("Partials/footer.ejs") %>