<%- include("Partials/header.ejs") %>
    <section class="h-100 h-custom" style="background-color:white;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card rounded-3">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRhRDf5R4idZ3871IGtm6ltDP9IT5Fr7q4dZg&usqp=CAU"
                            class="w-100" style="border-top-left-radius: .2rem; border-top-right-radius: .2rem;"
                            height="150px" alt="Sample photo">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>
                            <form class="px-md-2" method="POST" action="/editSkill/<%= user.id %>">                          
                            
                            <div class="row">

                                <div class="col-md-6 mb-4">

                                    <label for="Skills">Skills (Eg. Story telling, Writing skills, Technology, Data
                                        entry etc.)</label>
                                    <input type="text" id="skill1" name="Skill1" class="form-control mb-3"
                                        placeholder="Your skill" />
                                    <input type="text" id="skill2" name="Skill2" class="form-control mb-3"
                                        placeholder="other skill if any" />
                                    <input type="text" id="skill3" name="Skill3" class="form-control mb-3"
                                        placeholder="other skill if any" />
                                    <input type="text" id="skill4" name="Skill4" class="form-control mb-3"
                                    placeholder="other skill if any" />

                                </div>

                            </div>
                            <input class="next" type="submit" value="Next" />
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include("Partials/footer.ejs") %>